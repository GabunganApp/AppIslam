<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/doa"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#16c60a"
        android:text="Doa'Harian"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/jadwal"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#05c511"
        android:text="Jadwal Sholat"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="247dp" />

    <Button
        android:id="@+id/praktek"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0fa70c"
        android:text="Praktek Sholat"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="353dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi AppIslam "
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manajemen Informatika"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VI B"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />
</LinearLayout>